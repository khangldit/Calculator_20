<?xml version="1.0" encoding="utf-8"?>
<!-- main container -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- table contains all btn and text-->
    <!-- Nguyen Huynh Phuc -->
    <!-- 12h00 29/03/2020-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <!-- Row text-->
        <!-- Nguyen Huynh Phuc -->
        <!-- 12h00 29/03/2020-->
        <TableRow
            android:layout_weight="1"
            >
            <!-- text container -->
            <!-- Nguyen Huynh Phuc -->
            <!-- 12h00 29/03/2020-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                >
                <!-- text number, result -->
                <!-- Nguyen Huynh Phuc -->
                <!-- 12h00 29/03/2020-->
                <TextView
                    android:id="@+id/txtMainCal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:background="#444"
                    android:gravity="right"
                    android:padding="10dp"
                    android:textColor="#FFF" />

            </LinearLayout>
        </TableRow>
        <!-- Row for 7, 8, 9, /-->
        <!-- Nguyen Huynh Phuc -->
        <!-- 12h00 29/03/2020-->
       <TableRow
           android:layout_weight="1">
           <!-- btn 7-->
           <!-- Nguyen Huynh Phuc -->
           <!-- 12h00 29/03/2020-->
           <Button
               android:id="@+id/btn7"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:layout_weight=".25"
               android:autoSizeTextType="uniform"
               android:background="#ddd"
               android:text="7" />
           <!-- btn 8-->
           <!-- Nguyen Huynh Phuc -->
           <!-- 12h00 29/03/2020-->
           <Button
               android:id="@+id/btn8"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:layout_weight=".25"
               android:autoSizeTextType="uniform"
               android:background="#ddd"
               android:text="8" />
           <!-- btn 9-->
           <!-- Nguyen Huynh Phuc -->
           <!-- 12h00 29/03/2020-->
           <Button
               android:id="@+id/btn9"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:layout_weight=".25"
               android:autoSizeTextType="uniform"
               android:background="#ddd"
               android:text="9" />
           <!-- btn / -->
           <!-- Nguyen Huynh Phuc -->
           <!-- 12h00 29/03/2020-->
           <Button
               android:id="@+id/btnDiv"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:layout_weight=".25"
               android:autoSizeTextType="uniform"
               android:background="#f71"
               android:text="/"
               android:textColor="#fff" />
       </TableRow>
        <!-- row for 4 5 6 * -->
        <!-- Le Duc Khang -->
        <!-- 13h00 29/03/2020-->
        <TableRow
            android:layout_weight="1">
            <!--btn 4 -->
            <!-- Le Duc Khang -->
            <!-- 13h00 29/03/2020-->
            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#ddd"
                android:text="4" />
            <!-- btn 5 -->
            <!-- Le Duc Khang -->
            <!-- 13h00 29/03/2020-->
            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#ddd"
                android:text="5" />
            <!-- btn 6-->
            <!-- Le Duc Khang -->
            <!-- 13h00 29/03/2020-->
            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#ddd"
                android:text="6" />
            <!-- btn *-->
            <!-- Le Duc Khang -->
            <!-- 13h00 29/03/2020-->
            <Button
                android:id="@+id/btnMul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#f72"
                android:text="*"
                android:textColor="#fff" />
        </TableRow>
        <!-- row 1 2 3 - -->
        <!-- Le Duc Khang -->
        <!-- 13h00 29/03/2020-->
        <TableRow
            android:layout_weight="1">
            <!-- btn 1-->
            <!-- Le Duc Khang -->
            <!-- 13h00 29/03/2020-->
            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#ddd"
                android:text="1" />
            <!-- btn 2-->
            <!-- Le Duc Khang -->
            <!-- 13h00 29/03/2020-->
            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#ddd"
                android:text="2" />
            <!-- btn 3-->
            <!-- Le Duc Khang -->
            <!-- 13h00 29/03/2020-->
            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#ddd"
                android:text="3" />
            <!-- btn - -->
            <!-- Le Duc Khang -->
            <!-- 13h00 29/03/2020-->
            <Button
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#f73"
                android:text="-"
                android:textColor="#fff" />
        </TableRow>
        <!-- row 0 . + -->
        <!-- Huynh Ngoc Hung Thinh -->
        <!-- 14h00 29/03/2020-->
        <TableRow
            android:layout_weight="1"

            >
            <!-- btn 0-->
            <!-- Huynh Ngoc Hung Thinh -->
            <!-- 14h00 29/03/2020-->
            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".50"
                android:autoSizeTextType="uniform"
                android:background="#ddd"
                android:text="0" />
            <!-- btn .-->
            <!-- Huynh Ngoc Hung Thinh -->
            <!-- 14h00 29/03/2020-->
            <Button
                android:id="@+id/btnPoint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#ddd"
                android:text="." />
            <!-- btn + -->
            <!-- Huynh Ngoc Hung Thinh -->
            <!-- 14h00 29/03/2020-->
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:autoSizeTextType="uniform"
                android:background="#f74"
                android:text="+"
                android:textColor="#fff" />
        </TableRow>
        <!-- row C =-->
        <!-- Huynh Ngoc Hung Thinh -->
        <!-- 14h00 29/03/2020-->
        <TableRow
            android:layout_weight="1">
            <!-- container of btn C -->
            <!-- Huynh Ngoc Hung Thinh -->
            <!-- 14h00 29/03/2020-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">
                <!-- btn C -->
                <!-- Huynh Ngoc Hung Thinh -->
                <!-- 14h00 29/03/2020-->
                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:autoSizeTextType="uniform"
                    android:background="#f76"
                    android:text="C"
                    android:textColor="#fff" />
            </LinearLayout>
            <!-- container of btn = -->
            <!-- Huynh Ngoc Hung Thinh -->
            <!-- 14h00 29/03/2020-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">
                <!-- btn = -->
                <!-- Huynh Ngoc Hung Thinh -->
                <!-- 14h00 29/03/2020-->
                <Button
                    android:id="@+id/btnEqual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:autoSizeTextType="uniform"
                    android:background="#f75"
                    android:text="="
                    android:textColor="#fff" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>